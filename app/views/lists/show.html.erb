<h1>Lists#show</h1>

<h2><%= @list.name %></h2>

<ul>
<% @bookmarks.each do |bookmark| %>
  <li><%= bookmark.comment %>
  <%= bookmark.movie.title %></li>
  <%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
<% end %>
</ul>

<%= link_to "back to list menu", lists_path %>

<%= link_to "New Bookmark", new_list_bookmark_path(@list)%>
